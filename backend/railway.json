{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "nixpacks": {
    "phases": {
      "setup": {
        "aptPkgs": [
          "default-libmysqlclient-dev",
          "gcc",
          "python3-dev",
          "libpq-dev"
        ]
      }
    }
  }
}